    "set",
    "id",
    "user_id",
    "inlerner_id",
    "timestamp",
    "deleted",
    "deleted_by",
    "deleted_on"
  ],
  "field": {
    "iban": {
      "label": "IBAN",
      "rules": {
        "required": true,
        "minlength": 10,
        "maxlength": 100,
        "removespaces": true,
        "removechars": "-,.,_",
        "toupper" :true,
        "type": "iban"
      }
    },
    "tav": {
      "label": "Ter attentie van",
      "rules": {
        "required": false,
        "minlength": 3,
        "maxlength": 50
      }
    },
    "frequentie": {
      "label": "Factuur frequentie",
      "rules": {
        "required": true
      },
      "radio": {
        "inline": true,
        "options": {
          "w": "Week",
          "4w": "4 Weken",
          "m": "Maand"
        }
      }
    },
    "termijn": {
      "label": "Betaaltermijn",
      "rules": {
        "required": true
      },
      "list": {
        "options": "betaaltermijnen"
      }
    },
    "factuur_emailen": {
      "label": "Factuur emailen",
      "rules": {
        "required": true
      },
      "radio": {
        "inline": true,
        "options": {
          "1": "Ja",
          "0": "Nee"
        }
      }
    },
    "g_rekening": {
      "label": "G-rekening gebruiken",
      "rules": {
        "required": true
      },
      "radio": {
        "inline": true,
        "options": {
          "1": "Ja",
          "0": "Nee"
        }
      }
    },
    "g_rekening_percentage": {
      "label": "Percentage G-rekening",
      "rules": {
        "required": "conditional",
        "required_parent": "g_rekening",
        "required_value_true": "1"
      },
      "list": {
        "options": {
          "15": "15",
          "20": "20",
          "25": "25",
          "30": "30"
        }
      }
    },
    "factuur_per_medewerker": {
      "label": "Factuur per medewerker splitsen",
